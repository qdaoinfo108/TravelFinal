<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".person_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorDarkWhile"
            android:padding="10dp"
            android:text="Thông tin"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textAbout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Giới thiệu"
                android:drawableRight="@drawable/ic_next"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorDarkWhile">
            </View>
            <TextView
                android:id="@+id/textSOS"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Gọi khẩn cấp"
                android:drawableRight="@drawable/ic_next"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorDarkWhile">
            </View>
            <TextView
                android:id="@+id/textbookmark"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="9"
                android:padding="10dp"
                android:text="My Bookmark"
                android:drawableRight="@drawable/ic_next"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorDarkWhile">
            </View>
            <TextView
                android:id="@+id/textReport"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="9"
                android:padding="10dp"
                android:text="Phản hồi về ứng dụng"
                android:drawableRight="@drawable/ic_next"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorDarkWhile">
            </View>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>